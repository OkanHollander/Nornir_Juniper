set system host-name {{HOSTNAME}}

{% for intf in OSPF %}
set protocols ospf area {{ intf.area}} interface {{ intf.interface}}
{% endfor %}

{% if BGP.ASN_TYPE == 'private' %}
set protocols bgp local-as {{ BGP.ASN }}
{% endif %}

{% for line in SNMP %}
set snmp community {{ line.community }}
{% endfor %}

